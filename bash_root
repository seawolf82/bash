# .bashrc

if [ "$PS1" ]; then
   export PS1='\[\e[0;32m\]\u\[\e[m\]@\[\e[1;34m\]\w\[\e[m\] \[\e[1;32m\]#\[\e[m\] \[\e[1;37m\]'
fi



# User specific aliases and functions

alias rm='rm -i'
alias cp='cp -rfvp'
alias mv='mv -i'
alias df='df -h'

# Source global definitions
if [ -f /etc/bashrc ]; then
        . /etc/bashrc
fi
